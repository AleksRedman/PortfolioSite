mixin nav(className, items, activeItem)
  nav(class=`${className}`)
    ul(class=`${className}__list`)
      each item, ndx in items
        li(class=`${className}__item` + ( (ndx === activItem ) ? `${className}__item-active` : '' ))
          a.nav__links(class=`${className}__link` href=`${item.link}`)= item.item